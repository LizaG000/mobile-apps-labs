<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#BF3556"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:text="ToDo"
        android:textColor="#FFF0D2"
        android:textSize="32sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_bg"
        android:clickable="true"
        android:focusable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <CheckBox
            android:id="@+id/ch1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:background="@drawable/check_box_color"
            android:padding="0dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/te1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Купить мороженное"
            android:textSize="20sp"
            android:textColor="#FFF0D2"
            android:textStyle="bold"
            android:layout_marginLeft="13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <CheckBox
            android:id="@+id/ch2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:background="@drawable/check_box_color"
            android:gravity="center"
            android:padding="0dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/te2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Помыть полы"
            android:textSize="20sp"
            android:textColor="#FFF0D2"
            android:textStyle="bold"
            android:layout_marginLeft="13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <CheckBox
            android:id="@+id/ch3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:background="@drawable/check_box_color"
            android:gravity="center"
            android:padding="0dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/te3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Позвонить маме"
            android:textSize="20sp"
            android:textColor="#FFF0D2"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <CheckBox
            android:id="@+id/ch4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/check_box_color"
            android:button="@null"
            android:padding="0dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/te4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сходить в университет"
            android:textSize="20sp"
            android:textColor="#FFF0D2"
            android:textStyle="bold"
            android:layout_marginLeft="13dp"
            android:gravity="center" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
